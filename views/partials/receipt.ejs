<!-- partials/receipt.ejs -->
<div id="receipt">
    <span class="d-flex justify-content-between align-items-center align-content-center mb-3">
        <button id="clear-receipt-btn" class="btn btn-link has-tooltip" title="Cancella Scontrino">
            <i class="bi bi-eraser-fill"></i>
        </button>
        <h1 class="m-0">
            <i class="fas fa-receipt"></i> Scontrino
        </h1>
        <button id="close-receipt-btn" class="btn btn-link">
            <i class="fas fa-times"></i>
        </button>
    </span>
    <label for="customer-name" class="me-3">Nickname Cliente:</label>
    <div class="form-group mb-3 d-flex align-items-center">
        <div class="input-group d-flex align-items-end">
            <input type="text" id="customer-name" class="form-control" placeholder="Inserisci il nickname">
            <button type="button" class="btn btn-outline-secondary clear-input" data-input-id="customer-name">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- Aggiungi un ulteriore contenitore qui -->
    <div id="receipt-items-container" class="mb-3">
        <div class="items-wrapper">
            <ul id="receipt-items" class="list-group">
                <!-- Gli elementi verranno aggiunti dinamicamente qui -->
            </ul>
        </div>
    </div>
    <div class="total d-flex justify-content-center align-items-center">
        <span>Totale:</span>
        <span><span id="total-price">0.00</span> â‚¬</span>
    </div>
    <div class="d-flex justify-content-center align-items-center">
        <button id="checkout-btn" class="btn btn-success w-50 mt-3" disabled>
            Stampa Scontrino <i class="fas fa-cash-register fs-5"></i>
        </button>
    </div>
</div>

<!-- Pulsante flottante per mostrare/nascondere lo scontrino -->
<button id="toggle-receipt-btn" class="btn btn-primary has-tooltip" title="Mostra/Nascondi Scontrino">
    <i class="fas fa-receipt"></i>
</button>